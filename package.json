{
  "name": "@ryaninvents/plugin-bundle-dependencies",
  "version": "0.0.0-semantically-released",
  "description": "Plugin for @pika/pack to zip dependencies for Node.js",
  "author": "Ryan Kennedy <ryaninvents@users.noreply.github.com>",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@pika/types": "^0.9.2",
    "del": "^5.1.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-zip": "^4.2.0",
    "has-yarn": "^1.0.0",
    "temporarily": "^1.0.5"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "8"
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/gulp": "^4.0.5",
    "@types/gulp-zip": "^4.0.0",
    "@types/node": "^13.9.8",
    "eslint": "^5.13.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^25.2.4",
    "ls-archive": "^1.3.1",
    "prettier": "^2.0.2",
    "semantic-release": "^17.2.3",
    "typescript": "^3.3.3"
  },
  "eslintConfig": {
    "extends": "semistandard",
    "overrides": [
      {
        "files": [
          "**/__tests__/**",
          "*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "space-before-function-paren": "off"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8
          },
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": 8
              }
            }
          ]
        ]
      }
    }
  },
  "release": {
    "branch": "develop",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "build": "pika build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryaninvents/plugin-bundle-dependencies.git"
  }
}
